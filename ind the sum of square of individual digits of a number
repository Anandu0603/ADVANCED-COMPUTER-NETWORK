echo "Enter a number: "
read number
sum=0
while [ $number -ne 0 ]
do
digit=$((number % 10))
sum=$((sum + digit * digit))
number=$((number / 10))
done
echo "The sum of the squares of the digits is $sum."


out put
mlm@mlm-H81:~/Desktop/anandu/mca$ chmod +x sumofsquare.sh
mlm@mlm-H81:~/Desktop/anandu/mca$ ./sumofsquare.sh
Enter a number: 
2
The sum of the squares of the digits is 4.
